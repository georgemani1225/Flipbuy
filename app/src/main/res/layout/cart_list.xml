<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/Rlt1">
    <ImageView
        android:id="@+id/imgItemImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/frock_5"/>
    <TextView
        android:id="@+id/txtCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Women's Knee length Frock&#10;Violet&#10;Rs:1450/-"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        android:padding="10dp"
        android:textSize="17sp"/>
    <Button
        android:id="@+id/btnDelete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:layout_below="@+id/txtCart"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp" />
    <ImageView
        android:id="@+id/imgItemImage2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/frock_4"
        android:layout_below="@+id/imgItemImage"/>
    <TextView
        android:id="@+id/txtCart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Baby's short length Frock&#10;Yellow&#10;Rs:450/-"
        android:textStyle="bold"
        android:layout_marginLeft="150dp"
        android:padding="10dp"
        android:textSize="17sp"
        android:layout_marginTop="153dp"
        />
    <Button
        android:id="@+id/btnDelete2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:layout_below="@+id/txtCart"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="155dp"  />

</RelativeLayout>