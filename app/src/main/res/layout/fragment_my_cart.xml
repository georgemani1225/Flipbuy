<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.CartFragment"
    android:padding="10dp"
    android:id="@+id/Rlt1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/imgCrt"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/cart_img"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:id="@+id/imgItemImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/imgCrt"
        android:layout_marginTop="32dp"
        android:src="@drawable/frock1" />

    <TextView
        android:id="@+id/txtCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgCrt"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="36dp"
        android:padding="10dp"
        android:text="Women's Knee length Frock&#10;Ash&#10;Rs:1450/-"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:layout_below="@+id/txtCart"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/imgItemImage2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/imgItemImage"
        android:layout_marginTop="17dp"
        android:src="@drawable/frock2" />

    <TextView
        android:id="@+id/txtCart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDelete"
        android:padding="10dp"
        android:layout_marginLeft="140dp"
        android:text="Womens Knee length Frock&#10;Brown&#10;Rs:450/-"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnDelete2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:layout_below="@+id/txtCart"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="155dp"  />



</RelativeLayout>
