<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProductDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolBarTheme" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/pdt_Image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="65dp" />

    <TextView
        android:id="@+id/txtPdt_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pdt_Image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:padding="4dp"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPdt_Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPdt_Name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/poppins_medium"
        android:padding="4dp"
        android:textColor="#9e9e9e"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtPdt_Price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPdt_Desc"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:padding="4dp"
        android:textColor="@color/OurColor1"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPdt_Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPdt_Price"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:padding="4dp"
        android:text="In Stock"
        android:textColor="#d7421b"
        android:textSize="18sp" />


    <Button
        android:id="@+id/btnCart"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/cart_button"
        android:fontFamily="@font/poppins_medium"
        android:text="Add to Cart"
        android:textColor="#ffffff" />


</RelativeLayout>