<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/OurColor2"
    tools:context="activity.LoginActivity">

    <TextView
        android:id="@+id/welcome_bac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="25sp"
        android:textColor="#7AC9D0"
        android:text="@string/welcome_back" />

    <EditText

        android:id="@+id/etLoginMailid"
        android:layout_below="@+id/welcome_bac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="@string/enter_mail_id"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:paddingTop="20dp"
        android:shadowColor="#ffffff"
        android:textColorHint="@color/OurColor4"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginMailid"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:shadowColor="#ffffff"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_style"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="10dp"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18sp"
        android:textColorHint="@color/OurColor4"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/etLoginPassword"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="57dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_button"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoginPassword"
        android:padding="3dp"
        android:textSize="15sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:textStyle="bold"
        android:text="@string/forget_password"
        android:textColor="#ffffff"
        android:focusable="true" />

    <TextView
        android:id="@+id/txtRegisterNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:text="@string/register_new"
        android:textColor="#ffffff"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txtSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/txtRegisterNew"
        android:text="@string/sign_up"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15sp"/>


</RelativeLayout>