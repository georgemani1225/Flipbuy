<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".fragment.AccountFragment">

    <RelativeLayout
        android:id="@+id/topRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgProfileFrag"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/profile"
            app:civ_border_color="@android:color/background_light"
            app:civ_border_width="2dp" />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:layout_marginRight="20dp"
            android:background="#F72585"
            android:elevation="10dp"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/UserNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgProfileFrag"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
        android:id="@+id/txtCustomerSuprt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingStart="100dp"
        android:padding="10dp"
        android:text="Customer Support"
        android:layout_marginTop="500dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />
        <Button
            android:id="@+id/btnCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0011445588"
            android:background="@drawable/edit_text_style3"
            android:drawableStart="@drawable/ic_call_black_24dp"
            android:layout_below="@+id/txtCustomerSuprt"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:paddingStart="20dp"
            android:textColor="@color/colorPrimary" />
        <Button
            android:id="@+id/btnMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_style3"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:layout_below="@id/btnCall"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:paddingStart="20dp"
            android:text="support@flipbuy.com"
            android:textColor="@color/colorPrimary"/>




    </RelativeLayout>


</FrameLayout>