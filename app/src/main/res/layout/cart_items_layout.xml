<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cart_card_view" />

    <ImageView
        android:id="@+id/imgCartItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/txtPname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/imgCartItem"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/OurColor1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtPprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPname"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgCartItem"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/OurColor1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtPsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPprice"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgCartItem"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/OurColor1"
        android:textSize="18sp" />



    <ImageView
        android:id="@+id/btnDel"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_delete_cart" />

</RelativeLayout>
