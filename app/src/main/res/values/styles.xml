<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/OurColor2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/OurColor2</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/OurColor2</item>
    </style>

    <style name="today_s_bes">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="welcome_bac">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#7AC9D0</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/OurColor1</item>
        <item name="titleTextColor">@android:color/transparent</item>
        <item name="android:textColorSecondary">@color/OurColor1</item>
    </style>

    <style name="ToolBarThemeRegister" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#005059</item>
        <item name="titleTextColor">@color/OurColor4</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColorSecondary">@color/OurColor2</item>
    </style>

    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>

    </style>


</resources>
